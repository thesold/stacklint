{
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": true
        }],
        "no-console": 1,
        "radix": 0
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 6,
        "sourceType": "module",
        "impliedStrict": true
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
}
