{
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 4],
        "no-console": 1
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "impliedStrict": true,
        "parser": "babel-eslint"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    }
}
